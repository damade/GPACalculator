<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".BaseView.AdviseScreen.AdviceFragment">

	<LinearLayout android:layout_width="match_parent"
	              android:layout_height="match_parent"
	              android:background="@color/primary"
	              android:gravity="center"
	              android:orientation="vertical">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="32dp"
				android:layout_marginRight="32dp"
				android:gravity="center"
				android:orientation="horizontal"
				android:paddingBottom="8dp"
				android:paddingTop="8dp">

			<com.ou.gpa_calculator.Util.Views.CustomTextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginLeft="16dp"
					android:layout_marginRight="16dp"
					android:layout_weight="2"
					android:text="First Class Honours"
					android:textStyle="bold"/>
			<com.ou.gpa_calculator.Util.Views.CustomTextView
					android:id="@+id/result_total_units"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginEnd="16dp"
					android:layout_marginRight="16dp"
					android:text="4.50 - 5.00"
					android:textStyle="bold"/>
		</LinearLayout>

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="32dp"
				android:layout_marginRight="32dp"
				android:gravity="center"
				android:orientation="horizontal"
				android:paddingBottom="8dp"
				android:paddingTop="8dp">

			<com.ou.gpa_calculator.Util.Views.CustomTextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginLeft="16dp"
					android:layout_marginRight="16dp"
					android:layout_weight="2"
					android:text="Second Class Honours (Upper Division)"
					android:textColor="@color/white"
					android:textStyle="bold"/>

			<com.ou.gpa_calculator.Util.Views.CustomTextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="16dp"
					android:layout_marginRight="16dp"
					android:text="3.50 - 4.49"
					android:textStyle="bold"/>
		</LinearLayout>

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="32dp"
				android:layout_marginRight="32dp"
				android:gravity="center"
				android:orientation="horizontal"
				android:paddingBottom="8dp"
				android:paddingTop="8dp">

			<com.ou.gpa_calculator.Util.Views.CustomTextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginLeft="16dp"
					android:layout_marginRight="16dp"
					android:layout_weight="2"
					android:text="Second Class Honours (Lower Division)"
					android:textStyle="bold"/>

			<com.ou.gpa_calculator.Util.Views.CustomTextView
					android:id="@+id/result_total_semester"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="16dp"
					android:layout_marginRight="16dp"
					android:text="2.40 - 3.49"
					android:textStyle="bold"/>
		</LinearLayout>

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="32dp"
				android:layout_marginRight="32dp"
				android:gravity="center"
				android:orientation="horizontal"
				android:paddingBottom="8dp"
				android:paddingTop="8dp">

			<com.ou.gpa_calculator.Util.Views.CustomTextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginLeft="16dp"
					android:layout_marginRight="16dp"
					android:layout_weight="1"
					android:text="Third Class Honours"
					android:textStyle="bold"/>

			<com.ou.gpa_calculator.Util.Views.CustomTextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="16dp"
					android:layout_marginRight="16dp"
					android:text="1.50 - 2.39"
					android:textStyle="bold"/>
		</LinearLayout>

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="32dp"
				android:layout_marginRight="32dp"
				android:gravity="center"
				android:orientation="horizontal"
				android:paddingBottom="8dp"
				android:paddingTop="8dp">

			<com.ou.gpa_calculator.Util.Views.CustomTextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginLeft="16dp"
					android:layout_marginRight="16dp"
					android:layout_weight="1"
					android:text="Pass"
					android:textStyle="bold"/>

			<com.ou.gpa_calculator.Util.Views.CustomTextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="16dp"
					android:layout_marginRight="16dp"
					android:text="1.00 - 1.49"
					android:textStyle="bold"/>
		</LinearLayout>

		<com.ou.gpa_calculator.Util.Views.CustomTextView
				android:id="@+id/advise_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/twelve_dp"
				android:layout_marginLeft="16dp"
				android:layout_marginRight="16dp"
				android:text="You are doing just fine."
				android:layout_gravity="center"
				android:gravity="center"
				android:textStyle="bold"/>

		<br.com.simplepass.loadingbutton.customViews.CircularProgressButton
				android:id="@+id/okay_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dp"
				android:layout_marginBottom="20dp"
				app:spinning_bar_width="4dp"
				app:spinning_bar_color="@color/white"
				app:spinning_bar_padding="6dp"
				android:text="@string/action_done"
				android:background="@color/teal_700"
				android:textColor="@color/white"/>

	</LinearLayout>

</FrameLayout>