<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:background="@color/white"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

	<View
			android:layout_width="match_parent"
			android:layout_height="100dp"
			android:background="@color/primary"/>
	<TextView
			android:id="@+id/pc_done"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/twelve_dp"
			android:textSize="23sp"
			android:text="Select:"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="@color/white"/>


	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="@dimen/twenty_dp"
			android:orientation="vertical">

		<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/eight_dp"
				android:layout_marginEnd="16dp"
				android:layout_marginLeft="16dp"
				android:layout_marginRight="16dp"
				android:layout_marginStart="16dp"
				android:layout_marginTop="24dp"
				app:elevation="6dp"
				android:background="@color/white"
				android:backgroundTint="@color/white">

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginBottom="@dimen/eight_dp"
					android:gravity="center"
					android:backgroundTint="@color/white"
					android:background="@color/white"
					android:orientation="horizontal">

				<LinearLayout
						android:layout_width="0dp"
						android:layout_weight="1"
						android:layout_height="wrap_content"
						android:layout_marginStart="@dimen/four_dp"
						android:layout_marginLeft="@dimen/four_dp"
						android:orientation="vertical">
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="4dp"
							android:text="Department : "
							android:textAppearance="?android:attr/textAppearanceMedium"
							android:textColor="#000"/>

					<Spinner
							android:id="@+id/pc_dept_spinner"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="4dp"
							android:scrollbars="none"
							android:theme="@style/Theme.Spinner"/>

				</LinearLayout>

				<LinearLayout
						android:layout_width="0dp"
						android:layout_weight="1"
						android:layout_height="wrap_content"
						android:layout_marginStart="@dimen/four_dp"
						android:layout_marginLeft="@dimen/four_dp"
						android:orientation="vertical">
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="4dp"
							android:text="Year : "
							android:textAppearance="?android:attr/textAppearanceMedium"
							android:textColor="#000"/>

					<Spinner
							android:id="@+id/pc_year_spinner"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="4dp"
							android:scrollbars="none"
							android:theme="@style/Theme.Spinner"/>
				</LinearLayout>

				<LinearLayout
						android:layout_width="0dp"
						android:layout_weight="1"
						android:layout_height="wrap_content"
						android:layout_marginStart="@dimen/four_dp"
						android:layout_marginLeft="@dimen/four_dp"
						android:orientation="vertical">
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="4dp"
							android:text="Semester : "
							android:textAppearance="?android:attr/textAppearanceMedium"
							android:textColor="#000"/>

					<Spinner
							android:id="@+id/pc_sem_spinner"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="4dp"
							android:scrollbars="none"
							android:theme="@style/Theme.Spinner"/>

				</LinearLayout>

			</LinearLayout>

		</androidx.cardview.widget.CardView>

	</LinearLayout>

</FrameLayout>

