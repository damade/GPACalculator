<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:background="@color/white"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

	<View
			android:layout_width="match_parent"
			android:layout_height="100dp"
			android:background="@color/primary"/>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

		<ImageButton
				android:id="@+id/delete_form"
				android:layout_marginLeft="@dimen/twelve_dp"
				android:layout_marginTop="@dimen/four_dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/twelve_dp"
				android:background="@color/primary"
				android:src="@drawable/ic_white_cancel_24"/>

		<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/eight_dp"
				android:layout_marginEnd="16dp"
				android:layout_marginLeft="16dp"
				android:layout_marginRight="16dp"
				android:layout_marginStart="16dp"
				android:layout_marginTop="24dp"
				app:elevation="6dp"
				android:background="@color/white"
				android:backgroundTint="@color/white">

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginBottom="@dimen/eight_dp"
					android:gravity="center"
					android:backgroundTint="@color/white"
					android:background="@color/white"
					android:orientation="vertical">

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="@dimen/four_dp"
						android:layout_marginLeft="@dimen/four_dp"
						android:orientation="horizontal">
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="4dp"
							android:text="Select Year : "
							android:textAppearance="?android:attr/textAppearanceMedium"
							android:textColor="#000"/>

					<Spinner
							android:id="@+id/year_spinner"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="4dp"
							android:scrollbars="none"
							android:theme="@style/Theme.Spinner"/>
				</LinearLayout>

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="@dimen/four_dp"
						android:layout_marginLeft="@dimen/four_dp"
						android:orientation="horizontal">
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="4dp"
							android:text="Select Semester : "
							android:textAppearance="?android:attr/textAppearanceMedium"
							android:textColor="#000"/>

					<Spinner
							android:id="@+id/sem_spinner"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="4dp"
							android:scrollbars="none"
							android:theme="@style/Theme.Spinner"/>

				</LinearLayout>

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="@dimen/four_dp"
						android:layout_marginLeft="@dimen/four_dp"
						android:orientation="horizontal">
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="4dp"
							android:text="Select Course : "
							android:textAppearance="?android:attr/textAppearanceMedium"
							android:textColor="#000"/>

					<Spinner
							android:id="@+id/course_spinner"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="4dp"
							android:scrollbars="vertical"
							android:theme="@style/Theme.Spinner"/>

				</LinearLayout>

				<TextView
						android:id="@+id/course_unit_text_view"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:text="Course Unit"
						android:textAppearance="?android:attr/textAppearanceMedium"
						android:textColor="#000"/>

				<TextView
						android:id="@+id/course_title_text_view"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:text="Course Course"
						android:textAppearance="?android:attr/textAppearanceMedium"
						android:textColor="#000"/>
				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="@dimen/four_dp"
						android:layout_marginLeft="@dimen/four_dp"
						android:orientation="horizontal">
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="4dp"
							android:text="Select Grade : "
							android:textAppearance="?android:attr/textAppearanceMedium"
							android:textColor="#000"/>

					<Spinner
							android:id="@+id/grade_spinner"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="4dp"
							android:scrollbars="none"
							android:theme="@style/Theme.Spinner"/>
				</LinearLayout>


			</LinearLayout>

		</androidx.cardview.widget.CardView>

	</LinearLayout>

</FrameLayout>

